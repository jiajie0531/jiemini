.page {
  min-height: 100%;
  background-color: #f7f7f7;
  color: rgba(0, 0, 0, .9);
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}
.page__section{
  padding: 0 50rpx 60rpx;
  width: 650rpx;
}
.page__section:last-child{
  margin-bottom: 0;
}
.page__section-title {
  font-size: 28rpx;
  color: #888;
  margin: 40rpx 0 20rpx;
}
.page-section{
  padding: 20px;
}
.page-section {
  padding: 20rpx 50rpx 60rpx;
  width: 650rpx;
}
.page-section:last-child{
  margin-bottom: 0;
}
.page-section-title {
  font-size: 28rpx;
  color: #999999;
  margin: 40rpx 0 20rpx;
}
.section__title {
  font-size: 28rpx;
  color: #999999;
  margin: 40rpx 0 20rpx;
}
.page__hd {
  padding: 40px;
}
.page__bd {
  padding-bottom: 40px;
}
.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}
.page__desc {
  margin-top: 5px;
  color: #888888;
  text-align: left;
  font-size: 14px;
  display: inline-block;
  width: 100%;
}
.btn-area {
  box-sizing: border-box;
  width: auto;
  padding: 30rpx 0 30rpx;
}
.btn-area button {
  margin-top: 20rpx;
}
.btn-area:first-child {
  margin-top: 0;
}